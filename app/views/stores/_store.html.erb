

    <div class="col-sm-6 col-md-4 col-lg-3 " id="store-<%=store.id%>" >
      <div class="store">
          <div class="thumbnail">
            <%= link_to (image_tag store.img.url(:medium), class: 'image'), store %>
          </div>
          <div class="caption">
            <h3><%= store.name %></h3>
            <% if store.avg_rating==0 %>
              <h4>No reviews just yet</h4>
            <% else  %>
                <div class="star-show " data-score= <%= store.avg_rating %> ></div>
            <% end %>
            <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Rem velit vero nobis nostrum sit ipsa impedit provident corporis debitis nam.</p>
            <p>
              <%= link_to "more...", store , class: 'btn btn-primary'%>
         
              <% if user_signed_in?%>
                <%if  current_user.email==User.find_by_id(store.user_id).email %>
                    <%= link_to '刪除', store,method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
                <% end %>
              <% end %>



            </p>
          </div><!-- class="caption"-->
      </div> 
    </div>
